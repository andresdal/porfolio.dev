---
import Layout from "@/layouts/Layout.astro"

import AboutMeNew from "@/components/AboutMeNew.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import ExperienceNew from "@/components/ExperienceNew.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import ProjectsNew from "@/components/ProjectsNew.astro"
import SectionContainerNew from "@/components/SectionContainerNew.astro"
import Hero from "@/components/Hero.astro"
import TitleSectionNew from "@/components/TitleSectionNew.astro"
import { useTranslations } from "@/i18n/utils"

const lang = 'en';
const t = useTranslations(lang);
---

<Layout
  title={t('meta.title')}
  description={t('meta.description')}
  lang={lang}
>
  <main>
    <SectionContainerNew class="hero-section">
      <Hero lang={lang} />
    </SectionContainerNew>

    <div class="sections-wrapper">
      <SectionContainerNew id="experiencia">
        <TitleSectionNew title={t('sections.experience')}>
          <Briefcase class="size-8" />
        </TitleSectionNew>
        <ExperienceNew lang={lang} />
      </SectionContainerNew>

      <SectionContainerNew id="proyectos">
        <TitleSectionNew title={t('sections.projects')}>
          <CodeIcon class="size-8" />
        </TitleSectionNew>
        <ProjectsNew lang={lang} />
      </SectionContainerNew>

      <SectionContainerNew id="sobre-mi">
        <TitleSectionNew title={t('sections.about')}>
          <ProfileCheck class="size-8" />
        </TitleSectionNew>
        <AboutMeNew lang={lang} />
      </SectionContainerNew>
    </div>
  </main>
</Layout>

<style>
  main {
    padding-top: 100px;
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden;
  }

  .sections-wrapper {
    display: flex;
    flex-direction: column;
    gap: 4rem; /* Asegura espacio consistente entre secciones */
  }

  .hero-section {
    min-height: calc(100vh - 100px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .sections-wrapper {
      gap: 3rem;
    }
  }
</style>
