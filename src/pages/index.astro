---
import Layout from "@/layouts/Layout.astro"

import AboutMeNew from "@/components/AboutMeNew.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import ExperienceNew from "@/components/ExperienceNew.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import ProjectsNew from "@/components/ProjectsNew.astro"
import SectionContainerNew from "@/components/SectionContainerNew.astro"
import Hero from "@/components/Hero.astro"
import TitleSectionNew from "@/components/TitleSectionNew.astro"
---

<Layout
  title="Porfolio de Andrés D'Alessandro - Desarrollador Backend"
  description="Contrata a Andrés D'Alessandro para mejorar, optimizar y escalar tus sistemas backend. Disponible para proyectos freelance o empleo a tiempo completo."
>
  <main>
    <SectionContainerNew class="hero-section">
      <Hero />
    </SectionContainerNew>

    <div class="sections-wrapper">
      <SectionContainerNew id="experiencia">
        <TitleSectionNew title="Experiencia">
          <Briefcase class="size-8" />
        </TitleSectionNew>
        <ExperienceNew />
      </SectionContainerNew>

      <SectionContainerNew id="proyectos">
        <TitleSectionNew title="Proyectos">
          <CodeIcon class="size-8" />
        </TitleSectionNew>
        <ProjectsNew />
      </SectionContainerNew>

      <SectionContainerNew id="sobre-mi">
        <TitleSectionNew title="Sobre mí">
          <ProfileCheck class="size-8" />
        </TitleSectionNew>
        <AboutMeNew />
      </SectionContainerNew>
    </div>
  </main>
</Layout>

<style>
  main {
    position: relative;
    z-index: 1;
    width: 100%;
    overflow-x: hidden;
  }

  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  .sections-wrapper {
    position: relative;
    width: 100%;
  }
</style>
</Layout>
