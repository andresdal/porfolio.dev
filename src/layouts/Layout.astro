---
import "@fontsource-variable/onest"

import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <body class="relative text-on-surface overflow-x-hidden">
    <!-- Fondo Material Design 3 -->
    <div class="fixed inset-0 z-[-2] bg-surface">
      <div class="absolute inset-0 bg-gradient-subtle"></div>
    </div>
    
    <Header />
    <slot />
    <Footer />
    
    <style is:global>
      :root {
        /* Material Design 3 Color System */
        --md-primary: #E76F51;
        --md-secondary: #C9ADA7;
        --md-tertiary: #F4A261;
        --md-surface: #F2E9E4;
        --md-surface-variant: #E8DDD8;
        --md-background: #FFF8F3;
        --md-on-surface: #2A1810;
        --md-on-primary: #FFFFFF;
        --md-outline: #9A8C84;
        --md-shadow: rgba(42, 24, 16, 0.1);
        
        /* Elevations */
        --md-elevation-1: 0 1px 2px 0 var(--md-shadow);
        --md-elevation-2: 0 2px 6px 0 var(--md-shadow);
        --md-elevation-3: 0 4px 12px 0 var(--md-shadow);
        --md-elevation-4: 0 6px 16px 0 var(--md-shadow);
        --md-elevation-5: 0 8px 24px 0 var(--md-shadow);
      }

      html {
        font-family: 'Space Grotesk', system-ui, sans-serif;
        scroll-behavior: smooth;
        background: var(--md-background);
      }

      body {
        color: var(--md-on-surface);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      /* Material Design 3 Surface Gradient */
      .bg-surface {
        background: var(--md-surface);
      }

      .bg-gradient-subtle {
        background: linear-gradient(180deg, 
          var(--md-background) 0%, 
          var(--md-surface) 50%, 
          var(--md-surface-variant) 100%
        );
      }

      /* Animaciones de scroll */
      .scroll-animate {
        opacity: 0;
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }

      .scroll-animate-left {
        transform: translateX(-100px);
      }

      .scroll-animate-right {
        transform: translateX(100px);
      }

      .scroll-animate.show {
        opacity: 1;
        transform: translateX(0);
      }

      /* Material Design 3 Text Effects */
      .text-effect {
        font-size: clamp(2rem, 8vw, 6rem);
        letter-spacing: -0.02em;
        line-height: 100%;
        margin: 0;
        width: 100%;
        color: rgba(42, 24, 16, 0.2);
        background: linear-gradient(to right, var(--md-on-surface), var(--md-on-surface)) no-repeat;
        -webkit-background-clip: text;
        background-clip: text;
        background-size: 0%;
        transition: background-size cubic-bezier(0.1, 0.5, 0.5, 1) 0.5s;
        border-bottom: 1px solid var(--md-outline);
        display: flex;
        position: relative;
        cursor: pointer;
      }

      .text-effect span {
        position: absolute;
        width: 100%;
        height: 100%;
        background: var(--md-primary);
        color: var(--md-on-primary);
        clip-path: polygon(0 50%, 100% 50%, 100% 50%, 0 50%);
        transform-origin: center;
        transition: all cubic-bezier(0.1, 0.5, 0.5, 1) 0.4s;
        display: flex;
        align-items: center;
        font-weight: 700;
      }

      .text-effect:hover > span {
        clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
      }
    </style>
    <script>
      // Intersection Observer para animaciones de scroll
      document.addEventListener('astro:page-load', () => {
        const observerOptions = {
          threshold: 0.1,
          rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('show');
            }
          });
        }, observerOptions);

        const animatedElements = document.querySelectorAll('.scroll-animate');
        animatedElements.forEach(el => observer.observe(el));
      });
    </script>
  </body>
</html>
