---
import "@fontsource-variable/onest"

import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string
  description: string
  lang?: string
}

const { description, title, lang = 'es' } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <body class="relative text-on-surface overflow-x-hidden">
    <!-- Fondo Material Design 3 -->
    <div class="fixed inset-0 z-[-2] bg-surface"></div>
    
    <Header />
    <slot />
    <Footer />
    
    <style is:global>
      /* Reset bÃ¡sico */
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      :root {
        /* Material Design 3 Color System - Light Theme (Deep Violet) */
        --md-primary: #6750A4;
        --md-secondary: #625B71;
        --md-tertiary: #7D5260;
        --md-surface: #FEF7FF;
        --md-surface-variant: #E7E0EC;
        --md-background: #FEF7FF;
        --md-on-surface: #1D1B20;
        --md-on-primary: #FFFFFF;
        --md-outline: #79747E;
        --md-shadow: rgba(0, 0, 0, 0.2);
        
        /* Elevations */
        --md-elevation-1: 0 1px 2px 0 var(--md-shadow);
        --md-elevation-2: 0 2px 6px 0 var(--md-shadow);
        --md-elevation-3: 0 4px 12px 0 var(--md-shadow);
        --md-elevation-4: 0 6px 16px 0 var(--md-shadow);
        --md-elevation-5: 0 8px 24px 0 var(--md-shadow);
      }

      /* Material Design 3 Color System - Dark Theme (Deep Violet) */
      .dark {
        --md-primary: #9965f4;
        --md-secondary: #CCC2DC;
        --md-tertiary: #EFB8C8;
        --md-surface: #141218;
        --md-surface-variant: #49454F;
        --md-background: #141218;
        --md-on-surface: #E6E1E5;
        --md-on-primary: #381E72;
        --md-outline: #938F99;
        --md-shadow: rgba(0, 0, 0, 0.4);
        
        /* Elevations for dark mode */
        --md-elevation-1: 0 1px 2px 0 var(--md-shadow);
        --md-elevation-2: 0 2px 6px 0 var(--md-shadow);
        --md-elevation-3: 0 4px 12px 0 var(--md-shadow);
        --md-elevation-4: 0 6px 16px 0 var(--md-shadow);
        --md-elevation-5: 0 8px 24px 0 var(--md-shadow);
      }

      html {
        font-family: 'Space Grotesk', system-ui, sans-serif;
        scroll-behavior: smooth;
        background: var(--md-background);
        overflow-x: hidden;
        width: 100%;
      }

      body {
        color: var(--md-on-surface);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        width: 100%;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      /* Material Design 3 Surface */
      .bg-surface {
        background: var(--md-surface);
      }

      /* Animaciones de scroll */
      .scroll-animate {
        opacity: 0;
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }

      .scroll-animate-left {
        transform: translateX(-100px);
      }

      .scroll-animate-right {
        transform: translateX(100px);
      }

      .scroll-animate.show {
        opacity: 1;
        transform: translateX(0);
      }

      /* Material Design 3 Text Effects */
      .text-effect {
        font-size: clamp(1.75rem, 7vw, 6rem);
        letter-spacing: -0.02em;
        line-height: 110%;
        margin: 0;
        width: 100%;
        max-width: 100%;
        color: color-mix(in srgb, var(--md-on-surface) 20%, transparent);
        background: linear-gradient(to right, var(--md-on-surface), var(--md-on-surface)) no-repeat;
        -webkit-background-clip: text;
        background-clip: text;
        background-size: 0%;
        transition: background-size cubic-bezier(0.1, 0.5, 0.5, 1) 0.5s;
        border-bottom: 1px solid var(--md-outline);
        display: flex;
        position: relative;
        cursor: pointer;
        overflow: hidden;
        word-wrap: break-word;
      }
      
      @media (min-width: 768px) {
        .text-effect {
          font-size: clamp(2rem, 8vw, 6rem);
          line-height: 100%;
        }
      }

      .text-effect span {
        position: absolute;
        width: 100%;
        height: 100%;
        background: var(--md-primary);
        color: var(--md-on-primary);
        clip-path: polygon(0 50%, 100% 50%, 100% 50%, 0 50%);
        transform-origin: center;
        transition: all cubic-bezier(0.1, 0.5, 0.5, 1) 0.4s;
        display: flex;
        align-items: center;
        font-weight: 700;
      }

      .text-effect:hover > span {
        clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
      }
    </style>
    <script>
      // Intersection Observer para animaciones de scroll
      document.addEventListener('astro:page-load', () => {
        const observerOptions = {
          threshold: 0.1,
          rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('show');
            }
          });
        }, observerOptions);

        const animatedElements = document.querySelectorAll('.scroll-animate');
        animatedElements.forEach(el => observer.observe(el));
      });
    </script>
  </body>
</html>
