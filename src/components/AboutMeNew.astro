---
import { useTranslations } from "@/i18n/utils"

interface Props {
  lang?: string
}

const { lang = 'es' } = Astro.props
const t = useTranslations(lang as 'es' | 'en')

const personalImageAlt = "Andrés D'Alessandro"
const paragraphs = t('about.paragraphs')
---

<article class="about-container">
  <div class="about-content">
    <div class="about-text">
      {paragraphs.map((paragraph: string) => (
        <p class="about-paragraph" set:html={paragraph}></p>
      ))}
    </div>

    <div class="about-image-wrapper">
      <div class="image-decoration"></div>
      <img 
        src="/perfil.jpg" 
        alt={personalImageAlt} 
        class="about-image"
      />
    </div>
  </div>
</article>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('astro:page-load', () => {
    // Animar párrafos
    gsap.from('.about-paragraph', {
      opacity: 0,
      y: 30,
      stagger: 0.2,
      duration: 0.8,
      scrollTrigger: {
        trigger: '.about-container',
        start: 'top 70%',
        end: 'top 40%',
        toggleActions: 'play none none reverse'
      }
    });

    // Animar imagen
    gsap.from('.about-image-wrapper', {
      opacity: 0,
      x: 50,
      rotation: -5,
      duration: 1,
      scrollTrigger: {
        trigger: '.about-container',
        start: 'top 70%',
        end: 'top 40%',
        toggleActions: 'play none none reverse'
      }
    });
  });
</script>

<style>
  .about-container {
    position: relative;
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  .about-text {
    order: 1;
  }

  @media (max-width: 768px) {
    .about-text {
      order: 2;
    }
  }

  .about-paragraph {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: var(--md-on-surface);
    opacity: 0.9;
    font-size: 1.0625rem;
  }
  
  @media (max-width: 640px) {
    .about-paragraph {
      font-size: 0.9375rem;
      line-height: 1.7;
      margin-bottom: 1.25rem;
    }
  }

  .about-paragraph strong {
    color: var(--md-primary) !important;
    font-weight: 700;
  }

  .about-paragraph :global(strong) {
    color: var(--md-primary) !important;
    font-weight: 700;
  }

  .about-image-wrapper {
    position: relative;
    order: 2;
    display: flex;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .about-image-wrapper {
      order: 1;
    }
  }

  .image-decoration {
    position: absolute;
    inset: -12px;
    background: var(--md-secondary);
    border-radius: 2rem;
    opacity: 0.3;
    z-index: 0;
    transform: rotate(3deg);
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.3;
      transform: rotate(3deg) scale(1);
    }
    50% {
      opacity: 0.4;
      transform: rotate(-3deg) scale(1.02);
    }
  }

  .about-image {
    position: relative;
    width: 100%;
    max-width: 300px;
    aspect-ratio: 1;
    object-fit: cover;
    object-position: 50% 50%;
    border-radius: 2rem;
    border: 4px solid var(--md-primary);
    box-shadow: var(--md-elevation-3);
    transform: rotate(3deg);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1;
  }
  
  @media (max-width: 640px) {
    .about-image {
      max-width: 250px;
      border: 3px solid var(--md-primary);
    }
  }

  .about-image:hover {
    transform: rotate(0deg) scale(1.05);
    box-shadow: var(--md-elevation-4);
  }
</style>
