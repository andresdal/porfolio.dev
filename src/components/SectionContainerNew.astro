---
const { class: className, id } = Astro.props
---

<section id={id} class={`section-container ${className || ''}`}>
  <slot />
</section>

<style>
  .section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
    position: relative;
  }

  @media (max-width: 1024px) {
    .section-container {
      padding: 3.5rem 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .section-container {
      padding: 3rem 1.25rem;
    }
  }
  
  @media (max-width: 480px) {
    .section-container {
      padding: 2.5rem 1rem;
    }
  }
</style>
