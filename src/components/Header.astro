---
import ThemeToggle from "@/components/ThemeToggle.astro"
import LanguageSelector from "@/components/LanguageSelector.astro"
import { getLangFromUrl, useTranslations } from "@/i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const navItems = [
  {
    title: t('nav.experience'),
    label: "experiencia",
    url: `${lang === 'en' ? '/en' : ''}/#experiencia`,
  },
  {
    title: t('nav.projects'),
    label: "proyectos",
    url: `${lang === 'en' ? '/en' : ''}/#proyectos`,
  },
  {
    title: t('nav.about'),
    label: "sobre-mi",
    url: `${lang === 'en' ? '/en' : ''}/#sobre-mi`,
  },
  {
    title: t('hero.contact'),
    label: "contacto",
    url: "mailto:andres.dalesssandro@gmail.com",
  },
]
---

<header
  id="main-header"
  class="fixed top-0 z-50 flex items-center justify-center w-full mx-auto transition-all duration-300"
>
  <div class="header-content">
    <nav id="header-nav" class="nav-container">
      {
        navItems.map((link, index) => (
          <a
            class="nav-link"
            aria-label={link.label}
            href={link.url}
            data-index={index}
          >
            {link.title}
          </a>
        ))
      }
      <div class="selection-indicator-wrapper">
        <span class="selection-indicator"></span>
      </div>
    </nav>
    <div class="header-actions">
      <LanguageSelector />
      <ThemeToggle />
    </div>
  </div>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const header = document.getElementById("main-header")
    const sections = document.querySelectorAll("section")
    const navItems = document.querySelectorAll("header nav a.nav-link") as NodeListOf<HTMLElement>
    const indicator = document.querySelector(".selection-indicator-wrapper") as HTMLElement
    const nav = document.querySelector("nav") as HTMLElement
    let activeIndex = 0

    // Función para mover el indicador
    function moveIndicator(index: number, morphFactor: number = 0) {
      // Obtener la posición real del item
      const targetItem = navItems[index]
      const navRect = nav.getBoundingClientRect()
      const itemRect = targetItem.getBoundingClientRect()
      
      // Calcular posición relativa al nav
      const leftPosition = itemRect.left - navRect.left
      const itemWidth = itemRect.width
      
      indicator.style.left = `${leftPosition}px`
      indicator.style.width = `${itemWidth}px`
      indicator.style.setProperty('--morph-factor', morphFactor.toString())
    }

    // Inicializar en el primer item después de que el layout esté listo
    requestAnimationFrame(() => {
      moveIndicator(0)
    })

    // Observer para secciones
    const callback = (entries: any[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item, index) => {
            if (item.getAttribute("aria-label") == entry.target.id) {
              item.classList.add("active")
              activeIndex = index
              moveIndicator(index)
            } else {
              item.classList.remove("active")
            }
          })
        }
      })
    }

    const observer = new IntersectionObserver(callback, {
      root: null,
      rootMargin: "0px",
      threshold: 0.3,
    })

    sections.forEach((section) => {
      observer.observe(section)
    })

    // Click en nav items
    navItems.forEach((item, index) => {
      item.addEventListener('click', (e) => {
        // No prevenir default para emails
        if (!item.getAttribute('href')?.startsWith('mailto:')) {
          // Actualizar inmediatamente el activeIndex
          activeIndex = index
          
          // Mover el indicador a la nueva posición centrado
          moveIndicator(index, 0)
          
          // Actualizar clases
          navItems.forEach(el => el.classList.remove('active'))
          item.classList.add('active')
        }
      })

      // Hover effects con morph - se estira hacia donde apuntas
      item.addEventListener('mouseenter', () => {
        const diff = index - activeIndex
        moveIndicator(activeIndex, diff)
      })

      item.addEventListener('mouseleave', () => {
        moveIndicator(activeIndex, 0)
      })

      item.addEventListener('mousedown', () => {
        const diff = index - activeIndex
        moveIndicator(activeIndex, -diff)
        indicator.style.setProperty('--transition-duration', '0.1s')
      })

      item.addEventListener('mouseup', () => {
        const newIndex = activeIndex
        moveIndicator(newIndex, 0)
        indicator.style.setProperty('--transition-duration', '0.3s')
      })
    })

    // Cleanup function
    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect()
      } else {
        sections.forEach((section) => {
          observer.observe(section)
        })
      }
    }

    // Recalcular posición en resize
    let resizeTimeout: number
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout)
      resizeTimeout = setTimeout(() => {
        moveIndicator(activeIndex, 0)
      }, 100)
    })

    // Scroll effect - backdrop cuando se hace scroll
    let scrollTimeout: number
    const handleScroll = () => {
      clearTimeout(scrollTimeout)
      scrollTimeout = setTimeout(() => {
        if (window.scrollY > 50) {
          header?.classList.add('scrolled')
        } else {
          header?.classList.remove('scrolled')
        }
      }, 10)
    }
    
    window.addEventListener('scroll', handleScroll, { passive: true })
    handleScroll() // Check inicial
  })
</script>

<style>
  :root {
    --bounciness: 15;
  }

  header {
    padding: 1rem 1rem;
    background: transparent;
    width: 100%;
    max-width: 100vw;
  }

  header.scrolled {
    background: var(--md-surface);
    box-shadow: var(--md-elevation-3);
    padding: 0.5rem 1rem;
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    max-width: 100%;
    justify-content: center;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .nav-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    position: relative;
    background: var(--md-surface);
    border: none;
    border-radius: 9999px;
    padding: 0.25rem;
    box-shadow: var(--md-elevation-2);
    transition: box-shadow 0.3s ease;
    max-width: 100%;
  }

  header.scrolled .nav-container {
    box-shadow: var(--md-elevation-4);
  }

  .nav-container:hover {
    box-shadow: var(--md-elevation-3);
  }

  .nav-link {
    padding: 0.5rem 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 2;
    color: var(--md-on-surface);
    opacity: 0.7;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: opacity 0.3s ease;
    cursor: pointer;
  }

  .nav-link:hover {
    opacity: 1;
  }

  .nav-link.active {
    opacity: 1;
    color: var(--md-on-primary);
  }

  /* Selection Indicator con efecto bouncy */
  .selection-indicator-wrapper {
    --transition-duration: 0.3s;
    --morph-factor: 0;
    height: calc(100% - 0.5rem);
    position: absolute;
    z-index: 1;
    left: 0;
    top: 50%;
    pointer-events: none;
    transition-duration: var(--transition-duration);
    transition-property: left, width, transform;
    transition-timing-function: cubic-bezier(
      0.25,
      calc(var(--bounciness) / 10),
      0.5,
      1
    );
    transform: translateX(calc(var(--morph-factor) * 10%)) translateY(-50%) 
      scaleX(calc(1 + var(--morph-factor) * var(--morph-factor) * 0.05))
      scaleY(calc(1 - var(--morph-factor) * var(--morph-factor) * 0.1));
  }

  .selection-indicator {
    background: var(--md-primary);
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 9999px;
    transition-duration: calc(1.25 * var(--transition-duration));
    transition-property: transform;
    transition-timing-function: cubic-bezier(
      0.95,
      calc(0.5 * var(--bounciness)),
      0,
      1
    );
    box-shadow: var(--md-elevation-1);
  }

  /* Efectos de morph al hacer hover/click en items adyacentes */
  .nav-link:active ~ .selection-indicator-wrapper {
    --transition-duration: 0.1s;
  }

  .nav-link:active ~ .selection-indicator-wrapper .selection-indicator {
    transform: scaleX(calc(1 + var(--morph-factor) * var(--morph-factor) * 0.05))
      scaleY(calc(1 - var(--morph-factor) * var(--morph-factor) * 0.1));
    transition-timing-function: unset;
  }



  /* Tablets y pantallas medianas */
  @media (max-width: 768px) {
    header {
      padding: 0.75rem 0.5rem;
    }

    .nav-container {
      padding: 0.25rem;
      gap: 0.125rem;
      max-width: 90vw;
    }

    .nav-link {
      padding: 0.5rem 0.5rem;
      font-size: 0.75rem;
    }
  }

  /* Móviles - mantener horizontal pero más compacto */
  @media (max-width: 480px) {
    header {
      padding: 0.5rem 0.25rem;
    }

    .nav-container {
      padding: 0.2rem;
      max-width: 95vw;
      gap: 0.1rem;
    }

    .nav-link {
      padding: 0.4rem 0.3rem;
      font-size: 0.7rem;
    }
  }
</style>
