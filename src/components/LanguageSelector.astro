---
import { getLangFromUrl, languages } from "@/i18n/utils"

const lang = getLangFromUrl(Astro.url)
---

<div class="language-selector">
  <button id="lang-toggle" class="lang-button" aria-label="Change language">
    <span class="lang-text">{lang.toUpperCase()}</span>
    <svg class="lang-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 21C16.9706 21 21 16.9706 21 12C21 7.02944 16.9706 3 12 3C7.02944 3 3 7.02944 3 12C3 16.9706 7.02944 21 12 21Z" />
      <path d="M3.6 9H20.4" />
      <path d="M3.6 15H20.4" />
      <path d="M12 3C9.5 5.5 8.2 8.8 8.2 12C8.2 15.2 9.5 18.5 12 21" />
      <path d="M12 3C14.5 5.5 15.8 8.8 15.8 12C15.8 15.2 14.5 18.5 12 21" />
    </svg>
  </button>
  
  <div id="lang-menu" class="lang-menu" hidden>
    <button class="lang-option" data-lang="es">
      <span>ðŸ‡ªðŸ‡¸</span>
      <span>EspaÃ±ol</span>
    </button>
    <button class="lang-option" data-lang="en">
      <span>ðŸ‡ºðŸ‡¸</span>
      <span>English</span>
    </button>
  </div>
</div>

<script>
  document.addEventListener('astro:page-load', () => {
    const langToggle = document.getElementById('lang-toggle');
    const langMenu = document.getElementById('lang-menu');
    
    if (!langToggle || !langMenu) return;

    langToggle.addEventListener('click', (e) => {
      e.stopPropagation();
      const isHidden = langMenu.hasAttribute('hidden');
      
      if (isHidden) {
        langMenu.removeAttribute('hidden');
        setTimeout(() => langMenu.classList.add('show'), 10);
      } else {
        langMenu.classList.remove('show');
        setTimeout(() => langMenu.setAttribute('hidden', ''), 300);
      }
    });

    // Cerrar menÃº al hacer clic fuera
    document.addEventListener('click', () => {
      if (!langMenu.hasAttribute('hidden')) {
        langMenu.classList.remove('show');
        setTimeout(() => langMenu.setAttribute('hidden', ''), 300);
      }
    });

    // Prevenir que el menÃº se cierre al hacer clic dentro
    langMenu.addEventListener('click', (e) => {
      e.stopPropagation();
    });

    // Manejar cambio de idioma
    const langOptions = langMenu.querySelectorAll('.lang-option');
    langOptions.forEach(option => {
      option.addEventListener('click', (e) => {
        const lang = option.getAttribute('data-lang');
        
        // Guardar preferencia en cookie
        document.cookie = `preferred-language=${lang}; path=/; max-age=31536000; samesite=lax`;
        
        // Redirigir
        if (lang === 'es') {
          window.location.href = '/';
        } else {
          window.location.href = '/en';
        }
      });
    });
  });
</script>

<style>
  .language-selector {
    position: relative;
    display: inline-block;
  }

  .lang-button {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.75rem;
    background: var(--md-surface-variant);
    border: none;
    border-radius: 20px;
    color: var(--md-on-surface);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Space Grotesk', system-ui, sans-serif;
  }

  .lang-button:hover {
    background: var(--md-primary);
    color: var(--md-on-primary);
    transform: translateY(-2px);
    box-shadow: var(--md-elevation-2);
  }

  .lang-text {
    font-size: 0.875rem;
    font-weight: 600;
  }

  .lang-icon {
    width: 16px;
    height: 16px;
  }

  .lang-menu {
    position: absolute;
    top: calc(100% + 0.5rem);
    right: 0;
    background: var(--md-surface);
    border-radius: 12px;
    box-shadow: var(--md-elevation-3);
    padding: 0.5rem;
    min-width: 150px;
    z-index: 1000;
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .lang-menu.show {
    opacity: 1;
    transform: translateY(0);
  }

  .lang-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    color: var(--md-on-surface);
    text-decoration: none;
    border-radius: 8px;
    transition: background 0.2s ease;
    font-size: 0.875rem;
    font-weight: 500;
    background: transparent;
    border: none;
    width: 100%;
    cursor: pointer;
    font-family: 'Space Grotesk', system-ui, sans-serif;
  }

  .lang-option:hover {
    background: var(--md-surface-variant);
  }

  .lang-option span:first-child {
    font-size: 1.25rem;
  }

  @media (max-width: 768px) {
    .lang-button {
      padding: 0.375rem 0.625rem;
      font-size: 0.8125rem;
    }
  }
</style>
