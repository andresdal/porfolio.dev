---
const currentYear = new Date().getFullYear()
---

<footer class="footer-container">
  <div class="footer-content">
    <div class="footer-divider"></div>
    
    <div class="footer-grid">
      <span class="footer-text">
        &copy; {currentYear}
        <a href="/" class="footer-link">Andrés D'Alessandro</a>. 
        Todos los derechos reservados
      </span>
      
      <ul class="footer-links">
        <li>
          <a href="/#sobre-mi" class="footer-link">Sobre mí</a>
        </li>
        <li>
          <a id="contacto" href="mailto:andres.dalesssandro@gmail.com" class="footer-link">
            Contacto
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>

<style>
  .footer-container {
    width: 100%;
    margin-top: 6rem;
    padding: 2rem 1rem 3rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-divider {
    height: 1px;
    background: var(--md-outline);
    opacity: 0.3;
    margin-bottom: 2rem;
  }

  .footer-grid {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .footer-grid {
      flex-direction: row;
    }
  }

  .footer-text {
    font-size: 0.875rem;
    color: var(--md-on-surface);
    opacity: 0.7;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-text {
      text-align: left;
    }
  }

  .footer-links {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-link {
    color: var(--md-on-surface);
    opacity: 0.7;
    text-decoration: none;
    font-size: 0.875rem;
    position: relative;
    transition: opacity 0.3s ease, color 0.3s ease;
  }

  .footer-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--md-primary);
    transition: width 0.3s ease;
  }

  .footer-link:hover {
    opacity: 1;
    color: var(--md-primary);
  }

  .footer-link:hover::after {
    width: 100%;
  }
</style>
