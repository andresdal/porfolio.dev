---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import React from "./icons/React.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import NodeJS from "./icons/NodeJS.astro"
import Go from "./icons/Go.astro"
import Redis from "./icons/Redis.astro"
import Express from "./icons/Express.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-[#0279b1] text-white",
    icon: React,
  },
  NODEJS: {
    name: "NodeJS",
    class: "bg-[#015a0a] text-white",
    icon: NodeJS,
  },
  GO: {
    name: "Go",
    class: "bg-[#00a2ce] text-white",
    icon: Go,
  },
  REDIS: {
    name: "Redis",
    class: "bg-[#C6302B] text-white",
    icon: Redis,
  },
  EXPRESS: {
    name: "Express",
    class: "bg-[#000000] text-white",
    icon: Express,
  }
}

const PROJECTS = [
  {
    title: "Tonolele - Cancionero digital de musica cristiana",
    description:
      "Plataforma digital para músicos cristianos con editor interactivo de acordes. Soporta transposición automática con números romanos, notación latina y americana. Organiza canciones en cancioneros, busca por título, imprime colecciones completas. Sincronización en la nube con Vercel KV, temas claro/oscuro y diseño responsivo. Creada con React.",
    link: "https://tonolele.vercel.app/",
    github: "https://github.com/andresdal/Tonolele2",
    image: "/projects/tonolele.png",
    tags: [TAGS.REACT],
  },
  {
    title: "One Way - Ecommerce de indumentaria",
    description:
      "E-commerce de indumentaria creada con React y NodeJS. Integración de pagos con Mercado Pago y envíos con Correo Argentino. Implementación de CI/CD con GitHub Actions, Vercel y Railway. Desarrollo desde cero, incluyendo diseño responsivo y optimización para SEO.",
    link: "https://oneway.ar/",
    github: "https://github.com/andresdal/one-way-store",
    image: "/projects/oneway.png",
    tags: [TAGS.REACT, TAGS.EXPRESS],
  },
  {
    title: "Script Check Jobs",
    description: "Sistema de monitoreo del estado de API's y bases de datos criticas para el correcto funcionamiento de la plataforma de NeptuneAds. Implementado con Golang. Permite la detección temprana de fallos y la generación de alertas para el equipo de desarrollo a través de un canal de Slack.",
    github: "https://github.com/andresdal/script_check_jobs",
    image: "/projects/script_check_jobs.png",
    tags: [TAGS.GO, TAGS.REDIS],
  },
  {
    title: "Importador de Shopify",
    description: "Servicio de automatizacion de importacion de productos a Shopify. Permite a los usuarios importar grandes catálogos de productos a su tienda Shopify de manera rápida y eficiente de otras plataformas como Amazon y Aliexpress por medio de web scraping, utilizando la API de Shopify para crear productos, variantes e imágenes. Implementado con NodeJS y Express.",
    github: "https://github.com/andresdal/shopify",
    image: "/projects/shopify.png",
    tags: [TAGS.EXPRESS],
  }
]
---

<div class="projects-grid">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }, index) => (
      <article class="project-card" data-index={index}>
        <div class="project-image-container">
          <div class="project-image-wrapper">
            <img 
              src={image} 
              alt={title}
              class="project-image"
              loading="lazy"
            />
            <div class="project-overlay"></div>
          </div>
        </div>

        <div class="project-content">
          <h3 class="project-title">{title}</h3>
          
          <div class="project-tags">
            {tags.map((tag) => (
              <span class={`project-tag ${tag.class}`}>
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            ))}
          </div>

          <p class="project-description">{description}</p>

          <div class="project-links">
            {github && (
              <a href={github} class="project-link" target="_blank" rel="noopener">
                <GitHub class="size-5" />
                <span>Code</span>
              </a>
            )}
            {link && (
              <a href={link} class="project-link project-link-primary" target="_blank" rel="noopener">
                <Link class="size-5" />
                <span>Preview</span>
              </a>
            )}
          </div>
        </div>
      </article>
    ))
  }
</div>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('astro:page-load', () => {
    const projectCards = document.querySelectorAll('.project-card');
    
    projectCards.forEach((card, index) => {
      gsap.from(card, {
        opacity: 0,
        y: 100,
        duration: 1,
        delay: index * 0.2,
        scrollTrigger: {
          trigger: card,
          start: 'top 85%',
          end: 'top 50%',
          toggleActions: 'play none none reverse'
        }
      });

      // Parallax effect on image
      gsap.to(card.querySelector('.project-image'), {
        y: -30,
        ease: 'none',
        scrollTrigger: {
          trigger: card,
          start: 'top bottom',
          end: 'bottom top',
          scrub: true
        }
      });
    });
  });
</script>

<style>
  .projects-grid {
    display: grid;
    gap: 3rem;
    margin-top: 3rem;
  }

  .project-card {
    position: relative;
    background: var(--md-surface);
    border-radius: 1.5rem;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: var(--md-elevation-2);
  }

  .project-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--md-elevation-5);
  }

  .project-image-container {
    position: relative;
    width: 100%;
    height: 300px;
    overflow: hidden;
  }

  .project-image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover .project-image {
    transform: scale(1.1);
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, 
      var(--md-surface) 0%, 
      transparent 100%
    );
    opacity: 0.5;
    transition: opacity 0.4s ease;
  }

  .project-card:hover .project-overlay {
    opacity: 0.7;
  }

  .project-content {
    position: relative;
    padding: 2rem;
    z-index: 2;
  }

  .project-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--md-on-surface);
    margin-bottom: 1rem;
    line-height: 1.3;
    transition: all 0.3s ease;
  }

  .project-card:hover .project-title {
    color: var(--md-primary);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .project-tag {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.875rem;
    border-radius: 9999px;
    font-size: 0.8125rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .project-card:hover .project-tag {
    transform: translateY(-2px);
  }

  .project-description {
    color: var(--md-on-surface);
    opacity: 0.8;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 0.9375rem;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--md-surface-variant);
    border-radius: 0.75rem;
    color: var(--md-on-surface);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9375rem;
    transition: all 0.3s ease;
    box-shadow: var(--md-elevation-1);
  }

  .project-link:hover {
    background: var(--md-secondary);
    transform: translateY(-2px);
    box-shadow: var(--md-elevation-3);
  }

  .project-link-primary {
    background: var(--md-primary);
    color: var(--md-on-primary);
  }

  .project-link-primary:hover {
    background: var(--md-secondary);
  }

  @media (max-width: 768px) {
    .projects-grid {
      gap: 2rem;
    }

    .project-image-container {
      height: 200px;
    }

    .project-content {
      padding: 1.5rem;
    }

    .project-title {
      font-size: 1.5rem;
    }
  }
</style>
