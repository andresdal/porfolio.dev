---
interface Props {
  title: string
  company: string
  description: string
  date: string
}

const { title, company, description, date } = Astro.props
---

<div class="experience-card group">
  <div class="experience-date">
    <span class="date-text">{date}</span>
    <div class="date-line"></div>
  </div>
  
  <div class="experience-content">
    <div class="experience-header">
      <h3 class="experience-title">{title}</h3>
      <div class="company-badge">{company}</div>
    </div>
    
    <p class="experience-description">
      {description}
    </p>
    
    <div class="experience-glow"></div>
  </div>
</div>

<style>
  .experience-card {
    position: relative;
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 2rem;
    padding: 2rem 0;
    opacity: 0;
    transform: translateX(-50px);
  }

  @media (max-width: 768px) {
    .experience-card {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  .experience-date {
    position: relative;
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    padding-right: 2rem;
  }

  @media (max-width: 768px) {
    .experience-date {
      justify-content: flex-start;
      padding-right: 0;
    }
  }

  .date-text {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 500;
    text-align: right;
    position: relative;
    z-index: 2;
    transition: color 0.3s ease;
  }

  @media (max-width: 768px) {
    .date-text {
      text-align: left;
    }
  }

  .experience-card:hover .date-text {
    color: rgba(102, 126, 234, 1);
  }

  .date-line {
    position: absolute;
    right: 0;
    top: 0.5rem;
    width: 2px;
    height: calc(100% + 2rem);
    background: linear-gradient(to bottom, 
      rgba(102, 126, 234, 0.3),
      rgba(118, 75, 162, 0.3)
    );
  }

  @media (max-width: 768px) {
    .date-line {
      display: none;
    }
  }

  .experience-content {
    position: relative;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .experience-content::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
      rgba(102, 126, 234, 0.1) 0%, 
      rgba(118, 75, 162, 0.1) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .experience-card:hover .experience-content {
    transform: translateX(10px);
    border-color: rgba(102, 126, 234, 0.3);
    box-shadow: 0 20px 60px -10px rgba(102, 126, 234, 0.3);
  }

  .experience-card:hover .experience-content::before {
    opacity: 1;
  }

  .experience-header {
    position: relative;
    margin-bottom: 1rem;
  }

  .experience-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.75rem;
    transition: all 0.3s ease;
  }

  .experience-card:hover .experience-title {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .company-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, 
      rgba(102, 126, 234, 0.2) 0%, 
      rgba(118, 75, 162, 0.2) 100%
    );
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    transition: all 0.3s ease;
  }

  .experience-card:hover .company-badge {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: transparent;
    transform: scale(1.05);
  }

  .experience-description {
    position: relative;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
  }

  .experience-glow {
    position: absolute;
    bottom: -50%;
    right: -50%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, 
      rgba(102, 126, 234, 0.3) 0%, 
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.6s ease;
    pointer-events: none;
  }

  .experience-card:hover .experience-glow {
    opacity: 1;
  }
</style>
