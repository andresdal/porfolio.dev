---
interface Props {
  title: string
  company: string
  description: string
  date: string
}

const { title, company, description, date } = Astro.props
---

<div class="experience-card group">
  <div class="experience-date">
    <span class="date-text">{date}</span>
    <div class="date-line"></div>
  </div>
  
  <div class="experience-content">
    <div class="experience-header">
      <h3 class="experience-title">{title}</h3>
      <div class="company-badge">{company}</div>
    </div>
    
    <p class="experience-description">
      {description}
    </p>
  </div>
</div>

<style>
  .experience-card {
    position: relative;
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 2rem;
    padding: 2rem 0;
    opacity: 0;
    transform: translateX(-50px);
  }

  @media (max-width: 768px) {
    .experience-card {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  .experience-date {
    position: relative;
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    padding-right: 2rem;
  }

  @media (max-width: 768px) {
    .experience-date {
      justify-content: flex-start;
      padding-right: 0;
    }
  }

  .date-text {
    font-size: 0.875rem;
    color: var(--md-on-surface);
    opacity: 0.6;
    font-weight: 500;
    text-align: right;
    position: relative;
    z-index: 2;
    transition: all 0.3s ease;
  }

  @media (max-width: 768px) {
    .date-text {
      text-align: left;
    }
  }

  .experience-card:hover .date-text {
    opacity: 1;
    color: var(--md-primary);
  }

  .date-line {
    position: absolute;
    right: 0;
    top: 0.5rem;
    width: 2px;
    height: calc(100% + 2rem);
    background: var(--md-primary);
    opacity: 0.3;
  }

  @media (max-width: 768px) {
    .date-line {
      display: none;
    }
  }

  .experience-content {
    position: relative;
    padding: 2rem;
    background: var(--md-surface);
    border-radius: 1rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    box-shadow: var(--md-elevation-1);
  }

  .experience-card:hover .experience-content {
    transform: translateX(10px);
    box-shadow: var(--md-elevation-4);
  }

  .experience-header {
    position: relative;
    margin-bottom: 1rem;
  }

  .experience-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--md-on-surface);
    margin-bottom: 0.75rem;
    transition: all 0.3s ease;
  }

  .experience-card:hover .experience-title {
    color: var(--md-primary);
  }

  .company-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--md-tertiary);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--md-on-surface);
    transition: all 0.3s ease;
    box-shadow: var(--md-elevation-1);
  }

  .experience-card:hover .company-badge {
    background: var(--md-primary);
    color: var(--md-on-primary);
    transform: scale(1.05);
  }

  .experience-description {
    position: relative;
    line-height: 1.8;
    color: var(--md-on-surface);
    opacity: 0.8;
    font-size: 1rem;
  }
</style>
